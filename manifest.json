{
  "manifest_version": 3,
  "name": "Buzzy",
  "version": "0.1",
  "description": "Buzzy Notification App",
  "icons": {
    "16": "images/buzzy-logo16.png",
    "48": "images/buzzy-logo48.png",
    "128": "images/buzzy-logo128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_popup": "js/index.html",
    "default_title": "Buzzy"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "<all_urls>",
    "http://localhost:3000/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/customCursor.svg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "triggerBuzz": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Alt+C"
      },
      "description": "Triggers Buzz"
    }
  }
}